<div id="despesas-page-js" style="display:none">
	<div class="page-header position-relative">
		<h1>
			Contas
			<small>
				<i class="icon-double-angle-right"></i>
				Despesas
			</small>
		</h1>
	</div><!--/.page-header-->

	<div class="row-fluid">
		<div class="span12">

			<h3 class="header smaller lighter green">Informação</h3>

			<div class="progress progress-warning progress-striped progress-purple" id="percentagem-despesas-prog" data-percent="0% pago">
				<div class="bar" id="percentagem-despesas" style="width:0%;"></div>
			</div>

			<div class="infobox-container">
				
					<div class="infobox infobox-blue infobox-small infobox-dark">
						<div class="infobox-icon">
							<i class="icon-asterisk"></i>
						</div>
						<div class="infobox-data">
							<div class="infobox-content">Total</div>
							<div class="infobox-content" id="despesas-stats-areceber"></div>
						</div>
					</div>

					<div class="infobox infobox-green infobox-small infobox-dark">
						<div class="infobox-icon">
							<i class="icon-check"></i>
						</div>

						<div class="infobox-data">
							<div class="infobox-content">Pago</div>
							<div class="infobox-content" id="despesas-stats-pago"></div>
						</div>
					</div>

					<div class="infobox infobox-grey infobox-small infobox-dark">
						<div class="infobox-icon">
							<i class="icon-check-empty"></i>
						</div>

						<div class="infobox-data">
							<div class="infobox-content">Por pagar</div>
							<div class="infobox-content" id="despesas-stats-porpagar"></div>
						</div>
					</div>
				</div>


			<h3 class="header smaller lighter blue">Listagem</h3>

			<p><button class="btn btn-purple btn-block toggle-nova-despesa"> <i class="icon-plus"></i> Nova despesa </button></p>


			<!-- ##			##
				 ##	FORM 	##
				 ##			## -->

  
			<div class="row-fluid">

				<div class="span12" id="nova-despesa-form" style="display:none">
					<div class="page-header position-relative">
						<h4> Nova despesa </h4>
					</div>
					<form class="form-horizontal" id="despesa-form-inputs">
						<!--<legend>Form</legend>-->

						<div class="control-group">
							
							<label class="control-label" for="form-field-1">Título</label>

							<div class="controls">
								<input type="text" id="titulo" name="titulo" class="span6" placeholder="Nome da despesa">
							</div>
							<p></p>
							<label class="control-label" for="form-field-1">Serviço</label>

							<div class="controls">
								<select id="despesas-servicos-select" class="chosen-select-servicos-desp" name="servico_id">
																			
								</select>
							</div>

							<p></p>
							

							<label class="control-label" for="form-field-1">Valor</label>

							<div class="controls">
								<input type="text" id="form-field-1" class="span6" name="valor" placeholder="Indique o valor a pagar.">
							</div>
							
							<p></p>

							<label class="control-label" for="form-field-1">Data Limite</label>
							
							<div class="controls">
								<div class="input-append">
									<input class="span6 date-picker" id="id-date-picker-1" type="text" name="data_limite" data-date-format="yyyy-mm-dd">
									<span class="add-on">
										<i class="icon-calendar"></i>
									</span>
								</div>
							</div>

							<p></p>

							<div class="form-actions center" style="padding:10px 20px 10px">
								<input type="submit" value="Confirmar" class="btn btn-small btn-success"></input>
							</div>
						</div>
					</form>	
				</div>
			</div>






			<!-- ##			##
				 ##	TABELA 	##
				 ##			## -->




			<div class="row-fluid">
				<div class="table-header">
					Listagem de despesas
				</div>

				<table id="despesas-table" class="table table-striped table-bordered table-hover">
					<thead>
						<tr>							
							<th>Título</th>
							<th>Valor</th>
							<th class="hidden-480">Tipo de Serviço</th>

							<th class="hidden-phone">
								<i class="icon-time bigger-110 hidden-phone"></i>
								Limite pagamento
							</th>
							<th class="hidden-480">Estado</th>

							<th></th>
						</tr>
					</thead>

					<tbody>

						<% despesas.each(function(r) { %>
						<tr>
							<td> 
								<%= r.get('titulo') %>
							</td>

							<td><%= parseFloat(r.get('valor')).toFixed(2) %> €</td>

							<td class="hidden-480"><%= r.get('servico')['titulo'] %></td>
							<td class="hidden-phone"><%= r.get('data_limite') %></td>
							<td class="hidden-480">
								<button data-id = "<%= r.id %>" class="btn btn-minier toggle-pago-despesa <%= r.get('pago') == 1 ? 'btn-success' : 'btn-danger' %> <%= r.get('id') + '_line_buttom' %>"><%= r.get('pago') == 1 ? 'Pago' : 'Por pagar' %></button>
								<!--<span class="label label-success"><%= r.get('pago') %></span>-->
							</td>

							<td>
								<div class="hidden-phone visible-desktop action-buttons">
									<!--<a class="green" href="#">
										<i class="icon-pencil bigger-130 "></i>
									</a>-->

									<a class="red remove-despesa" href="#" data-id="<%= r.id %>">
										<i class="icon-trash bigger-130"></i>
									</a>
								</div>
							</td>
						</tr>
						<% }); %>
					</tbody>
				</table>
			</div> <!-- row fluid -->
		</div><!-- span -->
	</div><!--/.row-fluid-->
</div>

